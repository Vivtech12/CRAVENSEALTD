---
import { Image } from "astro:assets";
import about from "../assets/images/about.jpg";
import { Icon } from "astro-icon/components";
---

<!-- redesigned component -->
<section
	id="about"
	class="relative min-h-screen overflow-hidden bg-blue/50 py-20"
>
	<div class="relative z-10 container mx-auto max-w-6xl px-8 py-20">
		<!-- Header with centered approach -->
		<div class="mb-16 text-center">
			<h2
				class="text-purple text-5xl leading-tight font-bold md:text-6xl font-heading"
			>
				About
			</h2>
		</div>

		<div class="grid items-center gap-16 lg:grid-cols-2">
			<div
				data-aos="fade-up"
				data-aos-offset="150"
				data-aos-delay="100"
				data-aos-duration="800"
				class="space-y-8"
			>
				<div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-3">
					<div
						class="rounded-xl border border-gray-700 bg-white p-4 backdrop-blur-sm text-center"
					>
						<div class="mb-2 flex justify-center">
							<Icon
								name="clock"
								class="h-8 w-8 text-purple"
							/>
						</div>
						<div class="text-2xl font-bold text-purple">Fast</div>
						<div class="text-sm text-gray-700">
							Rapid Technical Support Response Time
						</div>
					</div>
					<div
						class="rounded-xl border border-gray-700 bg-white p-4 backdrop-blur-sm text-center"
					>
						<div class="mb-2 flex justify-center">
							<Icon
								name="truck"
								class="h-8 w-8 text-purple"
							/>
						</div>
						<div class="text-2xl font-bold text-purple">Save</div>
						<div class="text-sm text-gray-700">
							Great delivery options.
						</div>
					</div>
					<div
						class="rounded-xl border border-gray-700 bg-white p-4 backdrop-blur-sm text-center"
					>
						<div class="mb-2 flex justify-center">
							<Icon name="leaf" class="h-8 w-8 text-purple" />
						</div>
						<div class="text-2xl font-bold text-purple">Eco</div>
						<div class="text-sm text-gray-700">
							We prioritize sustainable practices.
						</div>
					</div>
				</div>
				<div class="space-y-6">
					<p class="text-xl leading-relaxed font-light text-gray-900">
						Establishing ourself as a unified platform offering
						cutting-edge electronics and technology solutions with
						unbeatable pricing, serving both enterprise clients and
						personal technology shoppers across the United Kingdom
						and internationally.
					</p>
					<p class="leading-relaxed text-gray-900">
						Our mission is to deliver strategic cost optimization
						through strong manufacturer partnerships and supply
						chain excellence, establishing operational efficiency
						and strategic cost reduction for our enterprise partners
						while maintaining premium quality for consumer markets.
					</p>
				</div>
			</div>

			<!-- Image side with enhanced styling -->
			<div
				data-aos="fade-left"
				data-aos-offset="150"
				data-aos-delay="200"
				data-aos-duration="800"
				class="relative"
			>
				<div class="group relative">
					<!-- Decorative elements -->
					<div
						class="absolute -inset-4 rounded-2xl bg-linear-to-r from-indigo-500/30 to-indigo-300/30 blur-xl transition-all duration-300 group-hover:blur-2xl"
					>
					</div>
					<div
						class="absolute top-4 left-4 h-20 w-20 rounded-full bg-linear-to-r from-indigo-500/50 to-indigo-300/50 blur-xl"
					>
					</div>
					<div
						class="absolute right-4 bottom-4 h-32 w-32 rounded-full bg-linear-to-rrom-indigo-500/50 to-indigo-300/50 blur-xl"
					>
					</div>

					<!-- Main image container -->
					<div
						class="relative rounded-2xl border border-gray-700 bg-white p-2 backdrop-blur-sm"
					>
						<Image
							class="h-80 w-full rounded-xl object-cover shadow-2xl lg:h-96"
							src={about}
							alt="Electronic products showcase"
						/>

						<!-- Overlay gradient -->
						<div
							class="pointer-events-none absolute inset-2 rounded-xl bg-linear-to-t from-black/20 via-transparent to-transparent"
						>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
